{
    "name": "douglasgreen/utility",
    "description": "A PHP utility project for exception classes and wrapper functions",
    "license": "MIT",
    "type": "library",
    "homepage": "https://github.com/douglasgreen/utility",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas@nurd.site",
            "homepage": "https://nurd.site/",
            "role": "Developer"
        }
    ],
    "keywords": [
        "directory",
        "exceptions",
        "file",
        "php",
        "regex",
        "utility",
        "wrapper"
    ],
    "autoload": {
        "psr-4": {
            "DouglasGreen\\Utility\\": "src/",
            "DouglasGreen\\Utility\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/douglasgreen/config-setup"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "douglasgreen/config-setup": "dev-main",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^10.5",
        "rector/rector": "^1.1",
        "symplify/easy-coding-standard": "^12.3"
    },
    "scripts": {
        "lint": [
            "ecs",
            "phpstan analyse",
            "phpmd --cache --cache-file var/cache/phpmd/cache.php . text phpmd.xml",
            "rector --dry-run"
        ],
        "lint:fix": [
            "ecs --fix",
            "rector"
        ],
        "post-install-cmd": "vendor/douglasgreen/config-setup/bin/copy_files.php",
        "post-update-cmd": "vendor/douglasgreen/config-setup/bin/copy_files.php",
        "test": "phpunit"
    }
}
