{
    "name": "douglasgreen/utility",
    "description": "PHP utility project for exception classes and wrapper functions",
    "license": "MIT",
    "type": "library",
    "homepage": "https://github.com/douglasgreen/utility",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas@nurd.site",
            "homepage": "https://nurd.site/",
            "role": "Developer"
        }
    ],
    "keywords": [
        "code quality",
        "coding standards",
        "exceptions",
        "function signatures",
        "php",
        "php automation",
        "static analysis",
        "type checking",
        "utility",
        "wrapper"
    ],
    "autoload": {
        "psr-4": {
            "DouglasGreen\\Utility\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/douglasgreen/config-setup"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "douglasgreen/config-setup": "dev-main",
        "php-mock/php-mock": "^2.5",
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^10.5",
        "rector/rector": "^1.2",
        "symplify/easy-coding-standard": "^12.3"
    },
    "scripts": {
        "lint": [
            "ecs",
            "phpstan analyse",
            "rector --dry-run"
        ],
        "lint:fix": [
            "ecs --fix",
            "rector"
        ],
        "post-install-cmd": "config-setup --pre-commit",
        "post-update-cmd": "config-setup --pre-commit",
        "test": "phpunit"
    }
}
