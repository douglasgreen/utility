{
    "name": "douglasgreen/utility",
    "description": "PHP utility project that combines CLI option parser, config setup, php linting, and utility classes",
    "license": "MIT",
    "type": "library",
    "homepage": "https://github.com/douglasgreen/utility",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas@nurd.site",
            "homepage": "https://nurd.site/",
            "role": "Developer"
        }
    ],
    "keywords": [
        "ast",
        "automation",
        "ci cd",
        "cli",
        "cli library",
        "cli tool",
        "code quality",
        "code standards",
        "code validation",
        "coding standards",
        "command",
        "command line",
        "command-line interface",
        "command-line utility",
        "composer",
        "console",
        "directory",
        "exceptions",
        "file",
        "fixing",
        "linter",
        "linting",
        "php",
        "php automation",
        "php cli",
        "php command line",
        "php console application",
        "phpcs",
        "php cs fixer",
        "php fig",
        "php parser",
        "php scripting",
        "phpunit",
        "psr",
        "regex",
        "scripting",
        "static analysis",
        "syntax check",
        "terminal",
        "testing",
        "utility",
        "wrapper"
    ],
    "autoload": {
        "psr-4": {
            "DouglasGreen\\OptParser\\": "src/OptParser",
            "DouglasGreen\\PhpLinter\\": "src/PhpLinter",
            "DouglasGreen\\Utility\\": "src/Utility"
        }
    },
    "bin": [
        "bin/check-style"
    ],
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/douglasgreen/config-setup"
        }
    ],
    "require": {
        "php": ">=8.1",
        "nette/neon": "^3.4",
        "nikic/php-parser": "^5.1",
        "pdepend/pdepend": "^2.16"
    },
    "require-dev": {
        "douglasgreen/config-setup": "dev-main",
        "php-mock/php-mock": "^2.5",
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^10.5",
        "rector/rector": "^1.2",
        "symplify/easy-coding-standard": "^12.3"
    },
    "scripts": {
        "lint": [
            "ecs",
            "phpstan analyse",
            "rector --dry-run"
        ],
        "lint:fix": [
            "ecs --fix",
            "rector"
        ],
        "post-install-cmd": "config-setup --pre-commit",
        "post-update-cmd": "config-setup --pre-commit",
        "test": "phpunit"
    }
}
